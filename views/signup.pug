extends base

block content
    main.main
        .signup-form
            h2.heading-secondary.ma-bt-lg Create your account
            form.form.form--signup
                .form__group
                    label.form__label(for='text') User name
                    input#userName.form__input(type='text', autocomplete='text', placeholder='username', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', autocomplete='email', placeholder='you@example.com', required)
                .form__group
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', autocomplete='current-password', placeholder='••••••••', required, minlength='8')
                .form__group.ma-bt-md
                    label.form__label(for='password') Confirm Password 
                    input#passwordConfirm.form__input(type='password', autocomplete='current-password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Create Account